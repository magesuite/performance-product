<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\CatalogSearch\Model\Indexer\Fulltext">
        <arguments>
            <argument name="batchSize" xsi:type="number">1000</argument>
        </arguments>
    </type>

    <type name="MageSuite\PerformanceProduct\Model\Container\ProductCategoryCollectionData">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="category_attributes" xsi:type="array">
                    <item name="name" xsi:type="string">name</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
